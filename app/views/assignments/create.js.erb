
<%= unless_errors_in(@assignment, 'message_dialog_errors') do %>
  $("#assignments").append("<%= ej(render :partial => 'assignments/show', :locals => {:assignment => @assignment})%>")

  $('#calendar').fullCalendar( 'renderEvent', 
                               <%= render :partial => 'assignments/assignment_event', 
                                          :locals => {:assignment => @assignment} %>,
                               true );
                               
  refresh_buttons();
  $("#message_dialog").dialog('close');
<% end %> 
