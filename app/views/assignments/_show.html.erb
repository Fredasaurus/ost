
<div id="assignment_<%= assignment.id %>" class="lp_item_info">
  <span class="lp_item_heading">
    <%= assignment.name %>
  </span>
  
  <span class="lp_item_summary">
    <%= render :partial => 'assignments/summary', :locals => {:assignment => assignment} %>
  </span>
  
  <span class="lp_item_buttons">
    <%= edit_button assignment, {:small => true, :remote => true} if present_user.can_update?(assignment) %>  
    <%= link_to "", nil, :class => 'calendar_button icon_only_button_small', :'data-assignment-id' => assignment.id, :title => 'Show on Calendar' %>
    <%= trash_button assignment, {:small => true, :remote => true} if present_user.can_destroy?(assignment) %>
  </span>
  
  <div class="lp_item_body">
    
    <div class="lp_item_sub_section">
      <div class="left_text">Topics:</div>
      
      <div id="assignment_<%= assignment.id %>_topic_list">
        <%= render :partial => 'assignments/topic_list', :locals => {:assignment => assignment} %>
      </div>
      <%= link_to "Add...", new_assignment_assignment_topic_path(assignment), :remote => true %>
    </div>
  
  </div>
  
</div>
