<p style="font-size:1.25em"><%= sub_table_heading %></p>

<%
  student_name_width_px     = 250
  assignment_grade_width_px = 150
  exercise_width_px         = 150
  table_width_px            = student_name_width_px + assignment_grade_width_px + 
                              exercise_width_px*external_assignment.external_assignment_exercises.count
%>

<table class="list" style="table-layout:fixed; width:<%= table_width_px %>px">
  <tr style="font-weight:bold">
    <td width="<%= student_name_width_px %>px">Student</td>
    <td width="<%= assignment_grade_width_px %>px">Assignment Grade</td>
    <% external_assignment.external_assignment_exercises.ordered.each do |eae| %>
      <td width="<%= exercise_width_px %>px"><%= eae.name %></td>
    <% end %>
  </tr>

  <% student_external_assignments.each do |sea| %>
    <tr>
      <td><%= sea.student.full_name(present_user)%></td>
      <td><%= on_the_spot_edit(sea, :grade, url: update_attribute_on_the_spot_student_external_assignments_path) %></td>
      <% sea.external_assignment.external_assignment_exercises.ordered.each do |eae| %>
        <% seae = eae.student_external_assignment_exercises
                     .where{student_external_assignment_id == my{sea.id}}
                     .first %>
        <td><%= on_the_spot_edit(seae, :grade, url: update_attribute_on_the_spot_student_external_assignment_exercises_path) %></td>
      <% end %>
    </tr>
  <% end %>
</table>