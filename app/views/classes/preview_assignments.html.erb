<%= pageHeading "Preview of Assignments" %>


<% @assignments.each_with_index do |assignment, ii| %>
  
  <%= section "#{assignment[0].assignment_plan.name}", {:classes => "#{ii == 0 ? 'first no_bar' : ''}" } do %>
    
    <% @cohorts.each_with_index do |cohort, cc| %>
      <p><b>Cohort: <%= cohort.name %></b></p>
      <ol>
        <% assignment[cc].assignment_exercises.each do |ae| %>
          <% te = ae.topic_exercise %>
          <% exercise = te.exercise %>
          <li><%= link_to "#{exercise.quadbase_id}", exercise.url %> 
              [<%= te.topic.name %> / 
               <%= te.concept.try(:name) || 'no concept' %>
               <% if present_user.is_researcher? || present_user.is_administrator? %> 
                 / <%= ae.tag_list %>
               <% end %>
              ]
          </li>
        <% end %>
      </ol>
    <% end %>
  
  <% end %>
  
  
<% end %>