<% @errors = @section.errors %>

<%= form_for([@klass, @section]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    Registration Code (embedded classes only)<br />
    <%= f.text_field :registration_code %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'link_button' %>
  </div>
<% end %>
