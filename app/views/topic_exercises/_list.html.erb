<%= 
  uber_list topic.topic_exercises, nil, 
                                   {
                                     :link_target_method => Proc.new {|te| te.exercise.url},
                                     :list_number => "q#{topic.id}",
                                     :remote_buttons => true,
                                     :sort_path => sort_topic_topic_exercises_path(topic), 
                                     :class => 'topic_sub_section',
                                     :do_can_checks_once => true
                                   } do |te|
    "#{te.exercise.quadbase_id} #{te.reserved_for_tests ? '[Test]' : ''}#{te.concept.nil? ? '' : '(' + te.concept.name + ')'}"
  end 
%>