<%= pageHeading("Contact Us") %>

<% if false %>
<div class="framed_content" style="float:right; width: 350px; margin-left:70px; margin-right: 20px">
  <div class="framed_content_inner">
    
  <div class="framed_content_heading" style="padding-bottom:8px">Send us a message!</div>

  <style type="text/css">
    .field input {
      width: 317px;
    }
    .field textarea {
      width: 320px;
    }
  </style>

  <%= form_tag contact_submit_path, :method => "post" do %>

    <% if user_signed_in? %>
      <%= hidden_field_tag :name, current_user.full_name %>
      <%= hidden_field_tag :email, current_user.email %>
      <%= hidden_field_tag :email_confirm, current_user.email %>
    <% else %>
      <div class="field">
        <div class="field_label">Your name</div>
        <%= text_field_tag :name, @name %>
      </div>
      <div class="field">
        <div class="field_label">Your email address</div>
        <%= text_field_tag :email, @email %>
      </div>
      <div class="field">  
        <div class="field_label">Confirm your email address</div>
        <%= text_field_tag :email_confirm, @email_confirm %>
      </div>
    <% end %>
  
    <div class="field">
      <div class="field_label">Topic</div>
      <%= 
        grouped_options = [
          ['textbooks',
            Textbook.all.collect{|p| p.title}],
          ['Other',
            ["Supporting #{SITE_NAME}", "Technical Issue", "Errata", "Other"]]
        ]
    
        select_tag "topic", grouped_options_for_select(grouped_options, @topic, 'Choose a topic')
      %>
    
    </div>

    <div class="field">  
      <div class="field_label">Message</div>
      <%= text_area_tag :message, @message, {:rows => 8} %>
    </div>
  
    <% if !user_signed_in? %>
      <div class="field">
        <%= recaptcha_tags :ssl => true %>
      </div>
    <% end %>

    <center>
      <%= submit_tag "Send" %>
    </center>
  <% end %>
  
  </div>
</div>
<% end %>

