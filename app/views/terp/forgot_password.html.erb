<%
  resource ||= User.new
  resource_name ||= User
%>

<div class='prompt' id='forgot_password'>
  <div class='prompt-instructions'>
    Forgot your password?  Fill out the form on the left, get your reset code in an email, then fill out the form on the right.
  </div>
  <div class='prompt-form'>

    <div style="padding-top: 50px; margin-left: auto; margin-right: auto">


      <div style="width: 250px; float: left; margin-top: 70px;">
        <%= lev_form_for :forgot_password, url: terp_forgot_password_path(terp_id: params[:terp_id]) do |f| %>
   
          <div class="field input user_username"><%= f.label :username_or_email %><br />
          <%= f.text_field :username, style: "width: 250px" %></div>

          <%#= f.hidden_field :terp_id, :value => params[:terp_id] %>

          <div><%= f.submit "Email me a password reset code", :class => "link_button"  %></div>
        <% end %>


      </div>

      <div class='middle-space' style='display:inline-block'>
        <div class="or-bar" id='left-or-block'>
          <div class="or-text">THEN &gt;</div>
        </div>
      </div>

      <div style="width: 250px; float:right; margin-left: 50px; ">

        <%= lev_form_for :reset_password, url: terp_reset_password_path(terp_id: params[:terp_id]) do |f| %>
          <div class='field '>
            <div class='field_label'>Username or email</div>
            <%= f.text_field :username, style: "width: 250px" %>
          </div>

          <div class='field '>
            <div class='field_label'>Password reset code (in your email)</div>
            <%= f.text_field :reset_code, style: "width: 250px" %>
          </div>

          <div class='field '>
            <div class='field_label'>New password</div>
            <%= f.password_field :new_password, style: "width: 250px" %>
          </div>

          <div class='field '>
            <div class='field_label'>New password again</div>
            <%= f.password_field :new_password_confirmation, style: "width: 250px" %>
          </div>
          
          <div class='prompt-buttons'><%= f.submit "Reset my password", :class => "ui-state-default link_button" %></div>
        <% end %>

      </div>

    </div>
  </div>

</div>

