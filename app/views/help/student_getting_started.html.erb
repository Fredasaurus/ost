              <%= render :partial => 'help/blurbs/student_register_screencast'%>
        <%= render :partial => 'help/blurbs/register_for_a_class'%>
      <% end %>

    <%= accordion_entry :title => "Participating in a Duke learning study" do %>  
      <%= render :partial => 'help/blurbs/consent_video'%>

<% end %>


<% end %>

